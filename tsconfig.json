{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"noImplicitAny": false,
		"allowJs": true,
		// "strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["jest", "cypress", "webpack-env"],
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"exclude": ["node_modules", "cypress"],
	"include": [
		"src/**/*",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"node_module/primevue/password/Password.vue"
	]
}
